<% book.post_comments.each do |post_comment| %>
  <div class="avatar">
    <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %>
  </div>
  <div class="comment-text">
    <%= post_comment.user.name %>
    <%= post_comment.comment %>
  </div>
  <% if post_comment.user == current_user %>
    <%= link_to "削除", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
  <% end %>
<% end %>